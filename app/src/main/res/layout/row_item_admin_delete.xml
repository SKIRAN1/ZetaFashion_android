            android:id="@+id/first_layout"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_weight="0.5"
                android:layout_height="150dp"
                android:layout_width="match_parent"
                android:id="@+id/pro_image"
                android:src="@drawable/blue_denim"
                />
