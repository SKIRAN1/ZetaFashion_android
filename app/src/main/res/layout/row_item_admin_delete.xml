    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp"
    android:backgroundTint="@color/black"
